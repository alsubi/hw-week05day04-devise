<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>  Email  </th>
      <th>  Name   </th>
      <th>  Model  </th>
      <th>  Year   </th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%=car.user.email%> </td>
        <td><%= car.name %> </td>
        <td><%= car.model %> </td>
        <td><%= car.year %> </td>
        <td><%= link_to 'Show', car %></td>

        <td><% if current_user.id == car.user_id %>
            <%= link_to 'Edit', edit_car_path(car) %>
            <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %></td>

      </tr>
    <% end %>
  </tbody>
</table>

